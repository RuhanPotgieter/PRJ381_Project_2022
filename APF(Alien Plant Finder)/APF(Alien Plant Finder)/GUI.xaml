<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:APF"
             x:Class="APF.GUI">
    <ContentPage.Content>

        <FlexLayout BackgroundColor="#2c2c2c"
                    AlignItems="Center"
                    JustifyContent="SpaceEvenly"
                    Direction="Column"
                    >
            
            <Image Source="launcher_foreground.png" HeightRequest="200" WidthRequest="200"></Image>
            

            <Button Text="Take Photo of Plant" Clicked="Button_Clicked"  WidthRequest="185" HeightRequest="49" BackgroundColor="#122316" TextColor="#DDF9DE" FontFamily="Jockey One" BorderColor="#5AFF61" BorderWidth="1" CornerRadius="15"></Button>
            <Button Text="Connect to Drone" Clicked="Button_Clicked"  WidthRequest="185" HeightRequest="49" BackgroundColor="#122316" TextColor="#DDF9DE" FontFamily="Jockey One" BorderColor="#5AFF61" BorderWidth="1" CornerRadius="15" ></Button>

        </FlexLayout>

        
    </ContentPage.Content>
</ContentPage>